<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Administrator.ProfileAdmin">

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <!-- Personal info -->
            <TextView
                style="@style/subtitle"
                android:text="@string/create_account_subtitle_personal_info" />
            <TextView style="@style/line_down" />

            <!-- Full name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/admin_profile_name"
                style="@style/text_input_layout"
                android:hint="@string/create_account_name"
                app:startIconDrawable="@drawable/icon__people">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_admin_name_edit"
                    android:layout_height="45dp"
                    android:padding="0dp"
                    style="@style/auto_complete_none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone number -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/admin_profile_telephone"
                style="@style/text_input_layout"
                android:hint="@string/phone_number"
                app:startIconDrawable="@drawable/icon__telephone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_admin_telephone_edit"
                    android:layout_height="45dp"
                    android:padding="0dp"
                    style="@style/auto_complete_none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/admin_profile_email"
                style="@style/text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:textColorHint="@color/black"
                app:startIconDrawable="@drawable/icon__email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_admin_email_edit"
                    android:layout_height="45dp"
                    android:padding="0dp"
                    style="@style/auto_complete_none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- User -->
            <TextView
                style="@style/subtitle"
                android:text="@string/create_account_subtitle_user" />
            <TextView style="@style/line_down" />

            <!-- Username -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/admin_profile_username"
                style="@style/text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_account_username"
                android:textColorHint="@color/black"
                app:startIconDrawable="@drawable/icon__people">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_admin_username_edit"
                    android:layout_height="45dp"
                    android:padding="0dp"
                    style="@style/auto_complete_none"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>