<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/background"
    tools:context=".Administrator.Profile">

    <!-- Admin view -->
    <ScrollView
        android:id="@+id/profile_admin_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <!-- Personal info -->
            <TextView
                style="@style/subtitle"
                android:text="@string/create_account_subtitle_personal_info" />
            <TextView style="@style/line_down" />

            <!-- Full name -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_admin_name"
                style="@style/text_input_layout"
                android:hint="@string/create_account_name"
                app:startIconDrawable="@drawable/icon__people"
                app:helperTextTextColor="@color/helper_text_red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_admin_name_edit"
                    style="@style/auto_complete_none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Code & phone -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Code -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_admin_code"
                    style="@style/text_input_layout"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/code">

                    <AutoCompleteTextView
                        android:id="@+id/profile_admin_code_edit"
                        style="@style/auto_complete_none" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone number -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_admin_telephone"
                    style="@style/text_input_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/profile_admin_code"
                    android:hint="@string/phone_number"
                    app:startIconDrawable="@drawable/icon__telephone"
                    app:helperTextTextColor="@color/helper_text_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_admin_telephone_edit"
                        style="@style/auto_complete_none"/>
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_admin_email"
                style="@style/text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:textColorHint="@color/black"
                app:startIconDrawable="@drawable/icon__email"
                app:helperTextTextColor="@color/helper_text_red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_admin_email_edit"
                    style="@style/auto_complete_none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- User -->
            <TextView
                style="@style/subtitle"
                android:text="@string/create_account_subtitle_user" />
            <TextView style="@style/line_down" />

            <!-- Username -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_admin_username"
                style="@style/text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_account_username"
                android:textColorHint="@color/black"
                app:startIconDrawable="@drawable/icon__people"
                app:helperTextTextColor="@color/helper_text_red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_admin_username_edit"
                    style="@style/auto_complete_none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_admin_password"
                style="@style/text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_account_password"
                android:textColorHint="@color/black"
                app:endIconMode="password_toggle"
                app:startIconDrawable="@drawable/icon__lock"
                app:helperTextTextColor="@color/helper_text_red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_admin_password_edit"
                    style="@style/auto_complete_none"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Place view -->
    <ScrollView
        android:id="@+id/profile_place_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <!-- Information -->
            <TextView
                style="@style/subtitle"
                android:text="@string/about_subtitle_information" />
            <TextView style="@style/line_down" />

            <!-- Name of the place -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_place_name"
                style="@style/text_input_layout"
                android:hint="@string/about_name"
                app:startIconDrawable="@drawable/icon__people"
                app:helperTextTextColor="@color/helper_text_red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_place_name_edit"
                    style="@style/auto_complete_none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Type of the place -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_place_type"
                style="@style/text_input_layout"
                android:hint="@string/about_type"
                app:startIconDrawable="@drawable/icon__place"
                app:helperTextTextColor="@color/helper_text_red">

                <AutoCompleteTextView
                    android:id="@+id/profile_place_type_edit"
                    style="@style/auto_complete_none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_place_description"
                style="@style/text_input_layout"
                android:hint="@string/about_description"
                app:helperTextTextColor="@color/helper_text_red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_place_description_edit"
                    style="@style/auto_complete_none"
                    android:layout_height="100dp"
                    android:padding="8dp"
                    android:gravity="top" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contacts -->
            <TextView
                android:id="@+id/profile_place_subtitle_contacts"
                style="@style/subtitle"
                android:text="@string/about_subtitle_contacts" />
            <TextView style="@style/line_down" />

            <!-- Facebook -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_place_facebook"
                style="@style/text_input_layout"
                android:hint="@string/about_facebook">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_place_facebook_edit"
                    style="@style/auto_complete_none"
                    android:drawableLeft="@drawable/icon__facebook"
                    android:drawablePadding="5dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Instagram -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_place_instagram"
                style="@style/text_input_layout"
                android:hint="@string/about_instagram">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_place_instagram_edit"
                    style="@style/auto_complete_none"
                    android:drawableLeft="@drawable/icon__instagram"
                    android:drawablePadding="5dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Twitter -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/profile_place_twitter"
                style="@style/text_input_layout"
                android:hint="@string/about_twitter">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_place_twitter_edit"
                    style="@style/auto_complete_none"
                    android:drawableLeft="@drawable/icon__twitter"
                    android:drawablePadding="5dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Code & phone -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Code -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_place_code"
                    style="@style/text_input_layout"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/code">

                    <AutoCompleteTextView
                        android:id="@+id/profile_place_code_edit"
                        style="@style/auto_complete_none" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone number -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_place_telephone"
                    style="@style/text_input_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/profile_place_code"
                    android:hint="@string/phone_number"
                    app:startIconDrawable="@drawable/icon__telephone"
                    app:helperTextTextColor="@color/helper_text_red">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_place_telephone_edit"
                        style="@style/auto_complete_none" />
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Location view -->
    <RelativeLayout
        android:id="@+id/profile_location_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- Maps -->
        <fragment
            android:id="@+id/profile_location_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />

        <!-- SearchView -->
        <SearchView
            android:id="@+id/profile_location_search"
            android:background="@drawable/round__search_view"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentRight="true"
            android:queryHint="@string/location_search"
            android:iconifiedByDefault="false"/>

        <!-- GPS -->
        <ImageButton
            android:id="@+id/profile_admin_location_gps"
            style="@style/button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/icon__gps"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>

    <Button
        android:id="@+id/profile_button"
        style="@style/button"
        android:text="@string/button_next"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>