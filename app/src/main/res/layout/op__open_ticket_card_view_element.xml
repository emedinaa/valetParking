<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/op__card_element"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:animateLayoutChanges="true"
        android:background="@color/black" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/op__card_plate"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Plate"
                android:textColor="@color/white"
                android:textSize="18dp" />


            <!-- Subtitulos -->
            <LinearLayout
                android:id="@+id/op__card_linear_subtitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/op__card_plate"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/op__card_brand"
                    style="@style/subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/check_brand"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


                <TextView
                    android:id="@+id/op__card_model"
                    style="@style/subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/check_model"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/op__card_year"
                    style="@style/subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/check_year"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/op__card_color"
                    style="@style/subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/check_color"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <!-- Contenido -->
            <LinearLayout
                android:id="@+id/op__card_linear_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/op__card_linear_subtitles"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/op__card_brand_content"
                    style="@style/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


                <TextView
                    android:id="@+id/op__card_model_content"
                    style="@style/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/op__card_year_content"
                    style="@style/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


                <TextView
                    android:id="@+id/op__card_color_content"
                    style="@style/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <!-- Subtitulos 2 -->
            <LinearLayout
                android:id="@+id/op__card_linear_subtitles2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/op__card_linear_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/op__card_telephone"
                style="@style/subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/phone_number"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:gravity="center_horizontal" />


            <TextView
                android:id="@+id/op__card_email"
                style="@style/subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/email"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>

            </LinearLayout>

            <!-- Contenido 2 -->
            <LinearLayout
                android:id="@+id/op__card_linear_content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/op__card_linear_subtitles2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/op__card_telephone_content"
                    style="@style/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/op__card_email_content"
                    style="@style/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Subtitulos 3 -->
            <LinearLayout
                android:id="@+id/op__card_linear_subtitles3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/op__card_linear_content2"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/op__card_key"
                    style="@style/subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/check_key"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


                <TextView
                    android:id="@+id/op__card_vehicle"
                    style="@style/subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/check_vehicle"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <!-- Contenido 3 -->
            <LinearLayout
                android:id="@+id/op__card_linear_content3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/op__card_linear_subtitles3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/op__card_key_content"
                    style="@style/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


                <TextView
                    android:id="@+id/op__card_vehicle_content"
                    style="@style/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>