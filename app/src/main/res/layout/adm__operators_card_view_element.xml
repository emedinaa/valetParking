<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adm__card_element"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="8dp"
        android:orientation="horizontal"
        android:animateLayoutChanges="true"
        android:background="@color/black" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/adm__card_name"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Name"
                android:textSize="18dp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:id="@+id/adm__card_linear_titles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adm__card_name"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adm__card_subtitle_hours"
                    style="@style/subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hours"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


                <TextView
                    android:id="@+id/adm__card_subtitle_vehicles"
                    style="@style/subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vehicles"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/adm__card_linear_subtitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adm__card_linear_titles"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adm__card_hour_entry"
                    style="@style/subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Entry"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


                <TextView
                    android:id="@+id/adm__card_hour_exit"
                    style="@style/subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Exit"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/adm__card_vehicles_entry"
                    style="@style/subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Entry"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


                <TextView
                    android:id="@+id/adm__card_vehicles_exit"
                    style="@style/subtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Exit"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/adm__card_linear_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adm__card_linear_subtitles"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adm__card_hour_entry_content"
                    style="@style/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Entry"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


                <TextView
                    android:id="@+id/adm__card_hour_exit_content"
                    style="@style/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Exit"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/adm__card_vehicles_entry_content"
                    style="@style/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Entry"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal" />


                <TextView
                    android:id="@+id/adm__card_vehicles_exit_content"
                    style="@style/message"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Exit"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/adm__card_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon__delete" />

    </LinearLayout>
</androidx.cardview.widget.CardView>