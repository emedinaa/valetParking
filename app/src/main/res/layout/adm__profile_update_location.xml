<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Administrator.ProfileUpdateLocation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Maps -->
        <fragment
            android:id="@+id/profile_admin_location_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />

        <!-- SearchView -->
        <SearchView
            android:id="@+id/profile_admin_location_search"
            style="@style/auto_complete_none"
            android:background="@drawable/round__search_view"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentRight="true"
            android:queryHint="@string/location_search"
            android:iconifiedByDefault="false"/>

        <!-- Button -->
        <Button
            android:id="@+id/profile_admin_location_button"
            style="@style/button"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:text="@string/button_update" />

        <!-- GPS -->
        <ImageButton
            android:id="@+id/profile_admin_location_gps"
            style="@style/button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/profile_admin_location_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/icon__gps"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>

</FrameLayout>