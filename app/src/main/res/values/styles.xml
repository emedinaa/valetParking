<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_horizontal</item>

        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>

        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="line_down">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>

        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>

        <item name="android:background">@drawable/round__button</item>
        <item name="backgroundTint">@color/background_orange</item>
    </style>

    <style name="toast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stFont">@font/montserrat_regular</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/black</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/icon__caution</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stRadius">15dp</item>
    </style>



    <!-- Floating action button -->
        <!-- Asignar bordes -->
        <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        </style>

        <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">50dp</item>
        </style>

        <!-- Colores -->
        <style name="ThemeOverlay.App.FloatingActionButton" parent="">
            <!-- Fondo -->
            <item name="colorSecondary">@color/background_orange</item>

            <!-- Icono -->
            <item name="colorOnSecondary">@color/white</item>

            <!-- ??? -->
            <item name="colorOnSurface">@color/helper_text_red</item>
        </style>

        <!-- Principal -->
        <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
            <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
            <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
        </style>


    <style name="text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">12sp</item>

        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
    </style>

    <style name="text_input_layout_light" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">12sp</item>

        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>

        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
    </style>

    <style name="text_input_layout_dropdown" parent="text_input_layout">
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <style name="text_input_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">0dp</item>

        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="auto_complete">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:dropDownHeight">0dp</item>

        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="auto_complete_none">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">15dp</item>

        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>

        <item name="endIconMode">none</item>
        <item name="android:inputType">none</item>
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
    </style>
    
    <style name="country_code_picker" >

        <item name="android:background">@drawable/round__search_view</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <!-- Fondo -->
        <item name="android:background">@color/black</item>
        <!-- Fondo de botones - selector de dia-->
        <item name="colorAccent">#666656</item>
        <!-- numero endIconMode diassets style selectors de mes -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Domingo, lunes... -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>
